{
  "name": "react-redux-saga-web3",
  "version": "0.0.1",
  "main": "lib/index.js",
  "dependencies": {
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "web3": "^1.0.0-beta.34",
    "web3-eth-contract": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-watch": "^2.0.7",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "rimraf": "^2.6.2",
    "run-when-changed": "^2.1.0"
  },
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "clean": "rimraf lib/",
    "dev": "run-when-changed --watch 'src/**/*.js' --exec 'npm run prepublish'",
    "prepublish": "npm run clean && npm run build",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"src/**/*.js\""
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
